<div class='section-header'>
<h1><%= @article.title %></h1>
<ul class='link'>
  
    <%= link_to "Edit", edit_article_path(@article), class: 'btn btn-edit' %>
    <%= link_to "Destroy", article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-delete' %>
  
</ul>
</div>

<p><%= @article.body %></p>



<h1>Comments</h1>
<% render @article.comments %>
 

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
